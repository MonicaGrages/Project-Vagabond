<h3>Enter details for your new post</h3>

<div class='form'>
  <%= form_for [@city, @post] do |f| %>
    <div class='input-field'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <br>
    <div class='input-field'>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    <br>
    <div class='input-field'>
      <%= f.label :photo, "Image URL" %>
      <%= f.text_field :photo %>
    </div>
    <br>
    <%= f.submit %>
  <% end %>
</div>





